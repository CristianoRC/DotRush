{
  "name": "dotrush",
  "publisher": "nromanov",
  "version": "1.0.0",
  "description": "Lightweight C# development environment for Visual Studio Code.",
  "displayName": "DotRush",
  "author": "Nikita Romanov",
  "license": "MIT",
  "icon": "assets/icon.png",
  "preview": false,
  "bugs": {
    "url": "https://github.com/JaneySprings/DotRush/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JaneySprings/DotRush"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Snippets"
  ],
  "keywords": [
    "C#",
    ".NET",
    "csharp",
    "dotnet"
  ],
  "engines": {
    "vscode": "^1.73.0"
  },
  "activationEvents": [
    "onLanguage:csharp",
    "workspaceContains:**/*.csproj"
  ],
  "main": "extension/extension.js",
  "contributes": {
    "themes": [
      {
        "label": "Visual Studio 2022 Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/vs2022_dark.json"
      },
      {
        "label": "Visual Studio 2022 Light",
        "uiTheme": "vs",
        "path": "./themes/vs2022_light.json"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "dotrush.build",
          "group": "z_dotnet@1",
          "when": "explorerResourceIsFolder || resourceFilename =~ /.*\\.csproj$/"
        },
        {
          "command": "dotrush.restore",
          "group": "z_dotnet@2",
          "when": "explorerResourceIsFolder || resourceFilename =~ /.*\\.csproj$/"
        },
        {
          "command": "dotrush.clean",
          "group": "z_dotnet@3",
          "when": "explorerResourceIsFolder || resourceFilename =~ /.*\\.csproj$/"
        }
      ]
    },
    "commands": [
      {
        "command": "dotrush.build",
        "title": "Build"
      },
      {
        "command": "dotrush.restore",
        "title": "Restore"
      },
      {
        "command": "dotrush.clean",
        "title": "Clean"
      }
    ],
    "configuration": [
      {
        "title": "DotRush",
        "properties": {
          "dotrush.additionalWorkspaceArguments": {
            "type": "string",
            "default": "",
            "description": "Additional MSBuild arguments to pass to the workspace."
          },
          "dotrush.enableRoslynAnalyzers": {
            "type": "boolean",
            "default": false,
            "description": "Enable Roslyn analyzers (may affect performance)."
          },

          "dotrush.roslyn.skipUnrecognizedProjects": {
            "type": "boolean",
            "default": true,
            "description": "Determines if unrecognized projects are skipped when projects are opened."
          },
          "dotrush.roslyn.loadMetadataForReferencedProjects": {
            "type": "boolean",
            "default": false,
            "description": "Determines if metadata from existing output assemblies is loaded instead of opening referenced projects."
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "tsc -watch -p ./src/vscode/tsconfig.json",
    "package": "webpack --mode production"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.73.0",
    "ts-loader": "^9.4.1",
    "typescript": "^4.8.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  }
}
