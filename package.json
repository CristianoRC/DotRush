{
  "name": "dotrush",
  "publisher": "nromanov",
  "version": "23.1.23092",
  "description": "%extension.description%",
  "displayName": "%extension.displayName%",
  "author": "Nikita Romanov",
  "license": "MIT",
  "icon": "res/icon.png",
  "preview": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/JaneySprings/dotRush"
  },
  "categories": [
    "Other"
  ],
  "engines": {
    "vscode": "^1.73.0"
  },
  "activationEvents": [
    "onLanguage:csharp",
    "workspaceContains:**/*.{csproj,sln,slnf,csx}"
  ],
  "main": "./extension/extension.js",
  "contributes": {
    "configuration":[
      {
        "title": "%config.title%",
        "properties": {
          "dotrush.context.buildOnlyFramework": {
            "type": "boolean",
            "default": false,
            "description": "%config.description.buildOnlyFramework%"
          },
          "dotrush.integration.useDotnetMeteor": {
            "type": "boolean",
            "default": false,
            "description": "%config.description.useDotnetMeteor%"
          }
        }
      }
    ],
    "themes": [
      {
        "label": "Visual Studio 2019 Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/vs2019_dark.json"
      },
      {
        "label": "Visual Studio 2019 Light",
        "uiTheme": "vs",
        "path": "./themes/vs2019_light.json"
      }
    ],
    "commands": [
      {
        "command": "%command.id.addToSln%",
        "title": "%command.title.addToSln%"
      },
      {
        "command": "%command.id.build%",
        "title": "%command.title.build%"
      },
      {
        "command": "%command.id.restore%",
        "title": "%command.title.restore%"
      },
      {
        "command": "%command.id.clean%",
        "title": "%command.title.clean%"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "%command.id.addToSln%",
          "group": "a_workspace"
        },
        {
          "command": "%command.id.build%",
          "group": "b_common"
        },
        {
          "command": "%command.id.restore%",
          "group": "b_common"
        },
        {
          "command": "%command.id.clean%",
          "group": "b_common"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./src/client/tsconfig.json --sourceMap false",
    "watch": "tsc -watch -p ./src/client/tsconfig.json"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.73.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  }
}
