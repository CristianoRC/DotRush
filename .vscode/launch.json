{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Extension",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/src/DotRush.Extension.VSCode"
            ],
            "outFiles": [
                "${workspaceFolder}/src/DotRush.Extension.VSCode/extension/**/*.js"
            ],
            "preLaunchTask": "tsc: watch"
        },
        {
            "name": ".NET Attach to LSP",
            "type": "coreclr",
            "request": "attach",
            "processName": "DotRush",
            "windows": {
                "processName": "DotRush.exe"
            }
        }
    ]
}